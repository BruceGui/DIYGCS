<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:text="@string/course_dir"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/commonText"
            android:text="@string/course_sensitivity"/>

        <SeekBar
            style="@style/commonSeekBar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/veryCommonStyle"
            android:layout_weight="3"
            android:text="@string/speed_scope"/>
        <EditText
            style="@style/veryCommonStyle"
            android:layout_weight="6"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/commonStyle"
            android:layout_weight="1"
            android:text="@string/scope_to"/>
        <EditText
            style="@style/veryCommonStyle"
            android:layout_weight="6"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/commonStyle"
            android:layout_weight="2"
            android:text="@string/sensitivity_unit"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="@style/commonStyle"
            android:layout_weight="1"
            android:text="@string/common_setting"/>

        <Button
            style="@style/commonStyle"
            android:layout_weight="1"
            android:text="@string/common_query"/>

    </LinearLayout>

</LinearLayout>