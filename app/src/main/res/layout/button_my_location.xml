<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:id="@+id/location_button_container"
    >

    <ImageButton
        android:id="@+id/my_location_button"
        style="@style/mapButton"
        android:src="@drawable/ic_action_location"
        />

    <ImageButton
        android:id="@+id/drone_location_button"
        style="@style/mapButton"
        android:src="@drawable/ic_action_navigate"
        android:scaleType="centerInside"
        />

    <ImageButton
        android:id="@+id/map_orientation_button"
        style="@style/mapButton"
        android:src="@drawable/ic_action_compass"
        />

    <ImageButton
        android:id="@+id/map_zoom_in"
        style="@style/mapButton"
        android:src="@drawable/map_zoom_in"/>

    <ImageButton
        android:id="@+id/map_zoom_out"
        style="@style/mapButton"
        android:src="@drawable/map_zoom_out"/>

</LinearLayout>