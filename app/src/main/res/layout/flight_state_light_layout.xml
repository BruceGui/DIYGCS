<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <TextView
            android:id="@+id/control_state_textView"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignBottom="@id/flight_mode"
            android:layout_toEndOf="@id/flight_mode"
            android:layout_marginStart="18dp"/>


    <TextView
            android:id="@+id/ground_sky_textView"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignBottom="@id/control_state_textView"
            android:layout_toEndOf="@id/control_state_textView"
            android:layout_marginStart="4dp"/>

    <TextView
            android:id="@+id/link_state_textView"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignBottom="@id/ground_sky_textView"
            android:layout_toEndOf="@id/ground_sky_textView"
            android:layout_marginStart="4dp"/>

</RelativeLayout>